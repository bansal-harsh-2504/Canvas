{
  "name": "canvas",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start:frontend": "cd apps/web && pnpm run start",
    "start:backend": "cd apps/http-backend && pnpm run start",
    "start:ws": "cd apps/ws-backend && pnpm run start",
    "generate:db": "cd packages/db && pnpm run generate",
    "migrate:db": "cd packages/db && pnpm run migrate"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.4",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
